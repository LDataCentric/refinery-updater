image: kernai/refinery-updater:latest
manifests:
  -
    image: kernai/refinery-updater:{{#if build.tag}}{{build.tag}}-{{/if}}drone-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: kernai/refinery-updater:{{#if build.tag}}{{build.tag}}-{{/if}}drone-arm64
    platform:
      architecture: arm64
      os: linux
      variant: v8
